<Window x:Class="SecureExam.Student.ExitPasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exit Confirmation"
        Height="250"
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1a1a1a"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="⚠️ EXIT CONFIRMATION" 
                   Foreground="#ff9800" 
                   FontSize="18"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>

        <TextBlock Grid.Row="1" 
                   Text="Enter exit password to close the exam:" 
                   Foreground="White" 
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,15"/>

        <PasswordBox x:Name="PasswordBox" 
                     Grid.Row="2"
                     Height="45" 
                     FontSize="16"
                     Padding="10"
                     VerticalAlignment="Top"
                     Margin="0,0,0,20"/>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,15,0,0">
            <Button Content="✓ OK" 
                    Width="100" 
                    Height="40"
                    Margin="0,0,15,0"
                    Background="#4caf50"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="14"
                    BorderThickness="0"
                    Click="OkButton_Click"/>
            <Button Content="✗ Cancel" 
                    Width="100" 
                    Height="40"
                    Background="#f44336"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="14"
                    BorderThickness="0"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
