<Window x:Class="SecureExam.Student.StudentLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Secure Exam - Student Login"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a1a"
        ResizeMode="NoResize">

    <Grid>
        <Border Background="#2c2c2c" 
                Width="450" 
                Height="500"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                CornerRadius="10"
                Padding="40">
            <StackPanel>
                <TextBlock Text="🔐 Secure Exam Platform" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Student Login" 
                           FontSize="16" 
                           Foreground="#999"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>

                <TextBlock Text="Student ID:" 
                           Foreground="White" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="StudentIdBox" 
                         Height="45" 
                         FontSize="15" 
                         Padding="12"
                         Margin="0,0,0,25"
                         CharacterCasing="Upper"/>

                <TextBlock Text="Login Code:" 
                           Foreground="White" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="LoginCodeBox" 
                         Height="45" 
                         FontSize="15" 
                         Padding="12"
                         Margin="0,0,0,30"
                         CharacterCasing="Upper"/>

                <Button x:Name="LoginButton"
                        Content="Start Exam" 
                        Height="50" 
                        FontSize="16"
                        FontWeight="Bold"
                        Background="#4caf50"
                        Foreground="White"
                        BorderThickness="0"
                        Click="LoginButton_Click"
                        Cursor="Hand"/>

                <TextBlock x:Name="StatusText" 
                           Text="" 
                           Foreground="#f44336" 
                           FontSize="13"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"
                           TextWrapping="Wrap"/>

                <TextBlock Text="⚠️ Close all applications before starting" 
                           Foreground="#ff9800" 
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,30,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
