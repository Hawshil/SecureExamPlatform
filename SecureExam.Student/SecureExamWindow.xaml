<Window x:Class="SecureExam.Student.SecureExamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Secure Exam"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Topmost="True"
        Background="#1a1a1a"
        AllowsTransparency="False"
        ShowInTaskbar="False">

    <Window.Resources>
        <Style x:Key="NonSelectableText" TargetType="TextBlock">
            <Setter Property="IsHitTestVisible" Value="False"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="90"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2c2c2c" BorderBrush="#444" BorderThickness="0,0,0,2">
            <Grid Margin="20,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock x:Name="ExamTitleText" 
                               Text="Exam Title" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="White"
                               Style="{StaticResource NonSelectableText}"/>
                    <TextBlock x:Name="StudentInfoText"
                               Text="Student: LOADING..." 
                               FontSize="12" 
                               Foreground="#aaa"
                               Style="{StaticResource NonSelectableText}"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="🚪 Exit (Password)"
                        Width="160"
                        Height="45"
                        Background="#f44336"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="13"
                        FontWeight="SemiBold"
                        Margin="0,0,10,0"
                        Click="ExitButton_Click"/>

                <Button Grid.Column="2"
                        Content="🔢 Calculator"
                        Width="140"
                        Height="45"
                        Background="#2196F3"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="13"
                        Margin="0,0,15,0"
                        Click="CalculatorButton_Click"/>

                <Border Grid.Column="3" 
                        Background="#f44336" 
                        CornerRadius="8" 
                        Padding="20,10"
                        VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="⏱ TIME LEFT" 
                                   FontSize="10" 
                                   Foreground="White" 
                                   HorizontalAlignment="Center"
                                   Style="{StaticResource NonSelectableText}"/>
                        <TextBlock x:Name="TimerText" 
                                   Text="00:00:00" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Style="{StaticResource NonSelectableText}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      Background="#1a1a1a"
                      Padding="30">
            <StackPanel x:Name="QuestionsPanel">
                <TextBlock Text="Loading exam..." 
                           FontSize="16" 
                           Foreground="#888"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Style="{StaticResource NonSelectableText}"/>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" Background="#2c2c2c" BorderBrush="#444" BorderThickness="0,2,0,0">
            <Grid Margin="30,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock x:Name="StatusText" 
                               Text="📝 Answer all questions before submitting" 
                               FontSize="13" 
                               Foreground="#aaa"
                               Style="{StaticResource NonSelectableText}"/>
                    <TextBlock x:Name="ProgressText"
                               Text="Progress: 0/0 answered"
                               FontSize="11"
                               Foreground="#666"
                               Margin="0,3,0,0"
                               Style="{StaticResource NonSelectableText}"/>
                </StackPanel>

                <Button Grid.Column="1"
                        x:Name="RefreshButton"
                        Content="🔄 Refresh (Alt+R)"
                        Width="150"
                        Height="50"
                        Background="#757575"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="12"
                        Margin="0,0,15,0"
                        Click="RefreshButton_Click"/>

                <Button Grid.Column="2"
                        x:Name="SubmitButton"
                        Content="✓ SUBMIT EXAM"
                        Width="180"
                        Height="50"
                        Background="#4caf50"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="Bold"
                        Click="SubmitButton_Click"/>
            </Grid>
        </Border>

        <Border x:Name="BlockingOverlay"
                Grid.RowSpan="3"
                Background="#80000000"
                Visibility="Collapsed">
            <TextBlock Text="⏳ Processing..."
                       FontSize="24"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
