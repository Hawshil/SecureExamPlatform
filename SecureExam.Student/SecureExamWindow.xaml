<Window x:Class="SecureExam.Student.SecureExamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Secure Exam"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        Background="#1a1a1a"
        AllowsTransparency="False">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2c2c2c" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock x:Name="ExamTitleText" 
                               Text="Exam Title" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock x:Name="StudentInfoText" 
                               Text="Student Info" 
                               FontSize="12" 
                               Foreground="#999" 
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock x:Name="TimerText" 
                               Text="00:00:00" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#4caf50" 
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>
                    <TextBlock x:Name="ProgressText" 
                               Text="0/0" 
                               FontSize="14" 
                               Foreground="#999" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="CalculatorButton"
                            Content="🧮"
                            Width="50"
                            Height="50"
                            Margin="5"
                            Background="#2196F3"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="20"
                            Click="CalculatorButton_Click"
                            ToolTip="Calculator"/>
                    <Button x:Name="RefreshButton"
                            Content="🔄"
                            Width="50"
                            Height="50"
                            Margin="5"
                            Background="#ff9800"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="18"
                            Click="RefreshButton_Click"
                            ToolTip="Save Progress"/>
                    <Button x:Name="ExitButton"
                            Content="🚪"
                            Width="50"
                            Height="50"
                            Margin="5"
                            Background="#f44336"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="18"
                            Click="ExitButton_Click"
                            ToolTip="Exit (Alt+E)"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Question Navigation Panel -->
            <Border Grid.Column="0" Background="#2c2c2c" BorderBrush="#444" BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="QuestionNavPanel" Margin="10"/>
                </ScrollViewer>
            </Border>

            <!-- Question Display Area -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Single Question Content -->
                <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="30">
                    <StackPanel x:Name="CurrentQuestionPanel"/>
                </ScrollViewer>

                <!-- Navigation Buttons -->
                <Border Grid.Row="1" Background="#2c2c2c" BorderBrush="#444" BorderThickness="0,1,0,0" Padding="30,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="PreviousButton"
                                Grid.Column="0"
                                Content="← Previous"
                                Width="120"
                                Height="45"
                                Background="#757575"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="14"
                                Click="PreviousButton_Click"/>

                        <TextBlock x:Name="StatusText" 
                                   Grid.Column="1"
                                   Text="📝 Continue answering" 
                                   Foreground="#4caf50" 
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>

                        <Button x:Name="NextButton"
                                Grid.Column="2"
                                Content="Next →"
                                Width="120"
                                Height="45"
                                Margin="0,0,10,0"
                                Background="#2196F3"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="14"
                                Click="NextButton_Click"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#2c2c2c" BorderBrush="#444" BorderThickness="0,1,0,0" Padding="30,15">
            <Button x:Name="SubmitButton"
                    Content="📤 Submit Exam"
                    Height="45"
                    Width="200"
                    HorizontalAlignment="Right"
                    Background="#4caf50"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="15"
                    FontWeight="Bold"
                    Click="SubmitButton_Click"/>
        </Border>

        <!-- Blocking Overlay -->
        <Grid x:Name="BlockingOverlay" 
              Grid.RowSpan="3" 
              Background="#CC000000" 
              Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="⏳ Submitting Exam..." 
                           FontSize="24" 
                           Foreground="White" 
                           FontWeight="Bold"/>
                <TextBlock Text="Please wait..." 
                           FontSize="16" 
                           Foreground="#999" 
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
