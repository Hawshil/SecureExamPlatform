<Window x:Class="SecureExam.Student.CalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator"
        Height="400"
        Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True"
        Background="#2c2c2c">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1a1a1a" CornerRadius="5" Padding="10">
            <TextBlock x:Name="DisplayText" 
                       Text="0" 
                       FontSize="32" 
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"/>
        </Border>

        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Content="C" Click="Clear_Click" Style="{StaticResource CalcButton}"/>
            <Button Grid.Row="0" Grid.Column="1" Content="⌫" Click="Backspace_Click" Style="{StaticResource CalcButton}"/>
            <Button Grid.Row="0" Grid.Column="2" Content="/" Click="Operation_Click" Style="{StaticResource CalcButton}"/>
            <Button Grid.Row="0" Grid.Column="3" Content="*" Click="Operation_Click" Style="{StaticResource CalcButton}"/>

            <Button Grid.Row="1" Grid.Column="0" Content="7" Click="Number_Click" Style="{StaticResource CalcButton}"/>
            <Button Grid.Row="1" Grid.Column="1" Content="8" Click="Number_Click" Style="{StaticResource CalcButton}"/>
            <Button Grid.Row="1" Grid.Column="2" Content="9" Click="Number_Click" Style="{StaticResource CalcButton}"/>
            <Button Grid.Row="1" Grid.Column="3" Content="-" Click="Operation_Click" Style="{StaticResource CalcButton}"/>

            <Button Grid.Row="2" Grid.Column="0" Content="4" Click="Number_Click" Style="{StaticResource CalcButton}"/>
            <Button Grid.Row="2" Grid.Column="1" Content="5" Click="Number_Click" Style="{StaticResource CalcButton}"/>
            <Button Grid.Row="2" Grid.Column="2" Content="6" Click="Number_Click" Style="{StaticResource CalcButton}"/>
            <Button Grid.Row="2" Grid.Column="3" Content="+" Click="Operation_Click" Style="{StaticResource CalcButton}"/>

            <Button Grid.Row="3" Grid.Column="0" Content="1" Click="Number_Click" Style="{StaticResource CalcButton}"/>
            <Button Grid.Row="3" Grid.Column="1" Content="2" Click="Number_Click" Style="{StaticResource CalcButton}"/>
            <Button Grid.Row="3" Grid.Column="2" Content="3" Click="Number_Click" Style="{StaticResource CalcButton}"/>
            <Button Grid.Row="3" Grid.Column="3" Grid.RowSpan="2" Content="=" Click="Equals_Click" Background="#4caf50" Foreground="White" FontWeight="Bold" FontSize="20" BorderThickness="0" Margin="2"/>

            <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Content="0" Click="Number_Click" Style="{StaticResource CalcButton}"/>
            <Button Grid.Row="4" Grid.Column="2" Content="." Click="Number_Click" Style="{StaticResource CalcButton}"/>
        </Grid>
    </Grid>

    <Window.Resources>
        <Style x:Key="CalcButton" TargetType="Button">
            <Setter Property="Background" Value="#444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
</Window>
