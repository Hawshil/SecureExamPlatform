<Window x:Class="SecureExam.Student.CalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator"
        Height="450"
        Width="350"
        WindowStyle="None"
        Background="#2c2c2c"
        ResizeMode="NoResize"
        Topmost="True">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="#444" Padding="10" CornerRadius="5,5,0,0">
            <Grid>
                <TextBlock Text="Calculator" 
                           Foreground="White" 
                           FontWeight="Bold" 
                           FontSize="14"
                           VerticalAlignment="Center"/>
                <Button Content="×" 
                        HorizontalAlignment="Right"
                        Width="30"
                        Height="30"
                        Background="#f44336"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="18"
                        FontWeight="Bold"
                        Click="CloseButton_Click"
                        Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Display -->
        <Border Grid.Row="1" Background="#1a1a1a" CornerRadius="5" Padding="10" Margin="0,10,0,10">
            <TextBlock x:Name="DisplayText" 
                       Text="0" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Foreground="White" 
                       TextAlignment="Right"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Buttons -->
        <UniformGrid Grid.Row="2" Rows="5" Columns="4">
            <Button Content="C" Click="Clear_Click" Background="#f44336" Foreground="White" Margin="2" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
            <Button Content="←" Click="Backspace_Click" Background="#ff9800" Foreground="White" Margin="2" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
            <Button Content="%" Click="Operation_Click" Background="#2196F3" Foreground="White" Margin="2" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
            <Button Content="÷" Click="Operation_Click" Background="#2196F3" Foreground="White" Margin="2" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>

            <Button Content="7" Click="Number_Click" Background="#555" Foreground="White" Margin="2" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
            <Button Content="8" Click="Number_Click" Background="#555" Foreground="White" Margin="2" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
            <Button Content="9" Click="Number_Click" Background="#555" Foreground="White" Margin="2" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
            <Button Content="×" Click="Operation_Click" Background="#2196F3" Foreground="White" Margin="2" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>

            <Button Content="4" Click="Number_Click" Background="#555" Foreground="White" Margin="2" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
            <Button Content="5" Click="Number_Click" Background="#555" Foreground="White" Margin="2" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
            <Button Content="6" Click="Number_Click" Background="#555" Foreground="White" Margin="2" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
            <Button Content="-" Click="Operation_Click" Background="#2196F3" Foreground="White" Margin="2" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>

            <Button Content="1" Click="Number_Click" Background="#555" Foreground="White" Margin="2" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
            <Button Content="2" Click="Number_Click" Background="#555" Foreground="White" Margin="2" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
            <Button Content="3" Click="Number_Click" Background="#555" Foreground="White" Margin="2" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
            <Button Content="+" Click="Operation_Click" Background="#2196F3" Foreground="White" Margin="2" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>

            <Button Content="0" Click="Number_Click" Background="#555" Foreground="White" Margin="2" Grid.Column="0" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
            <Button Content="." Click="Number_Click" Background="#555" Foreground="White" Margin="2" Grid.Column="1" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
            <Button Content="=" Click="Equals_Click" Background="#4caf50" Foreground="White" Margin="2" Grid.Column="2" Grid.ColumnSpan="2" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand"/>
        </UniformGrid>
    </Grid>
</Window>
