<Window x:Class="SecureExamPlatform.UI.StudentLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Login"
        WindowState="Maximized"
        WindowStyle="None"
        Background="#1a1a1a"
        ResizeMode="NoResize"
        Topmost="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar with Exit Button -->
        <Border Grid.Row="0" Background="#2c2c2c" Padding="20,15">
            <Grid>
                <TextBlock Text="🔒 Secure Exam Platform - Student Login" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Press Alt+E to Exit" 
                               FontSize="12" 
                               Foreground="#888"
                               VerticalAlignment="Center"
                               Margin="0,0,15,0"/>
                    <Button x:Name="ExitButton"
                            Content="✕"
                            Width="50"
                            Height="50"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="20"
                            Click="ExitButton_Click"
                            ToolTip="Exit (Alt+E)"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Login Form -->
        <Grid Grid.Row="1">
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Width="550">

                <!-- Logo -->
                <Border Width="150" 
                        Height="150" 
                        Background="#2e7d32"
                        CornerRadius="75"
                        Margin="0,0,0,40">
                    <TextBlock Text="🎓"
                               FontSize="80"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Title -->
                <TextBlock Text="Student Exam Login" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,10"/>

                <TextBlock Text="Enter your credentials provided by your invigilator" 
                           FontSize="14" 
                           Foreground="#aaa" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,40"/>

                <!-- Student ID -->
                <TextBlock Text="Student ID" 
                           Foreground="#ccc" 
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>
                <TextBox x:Name="StudentIdBox" 
                         Height="55" 
                         FontSize="16"
                         Background="#2c2c2c"
                         Foreground="White"
                         BorderBrush="#555"
                         BorderThickness="2"
                         Padding="15"
                         CharacterCasing="Upper"
                         Margin="0,0,0,25"/>

                <!-- Login Code -->
                <TextBlock Text="One-Time Login Code" 
                           Foreground="#ccc" 
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>
                <TextBox x:Name="LoginCodeBox" 
                         Height="55" 
                         FontSize="20" 
                         FontFamily="Consolas" 
                         MaxLength="8"
                         Background="#2c2c2c"
                         Foreground="White"
                         BorderBrush="#555"
                         BorderThickness="2"
                         Padding="15"
                         TextAlignment="Center"
                         Margin="0,0,0,30"/>

                <!-- Login Button -->
                <Button x:Name="LoginButton"
                        Content="🚀 Start Exam" 
                        Height="60" 
                        Background="#4caf50" 
                        Foreground="White" 
                        FontSize="18" 
                        FontWeight="Bold"
                        BorderThickness="0"
                        Click="LoginButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8"
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#555"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#66bb6a"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Status Text -->
                <TextBlock x:Name="StatusText" 
                           Margin="0,20,0,0" 
                           Foreground="#f44336" 
                           TextWrapping="Wrap"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"/>

                <!-- Help Text -->
                <Border Background="#2a2a2a"
                        CornerRadius="8"
                        Padding="20"
                        Margin="0,40,0,0">
                    <StackPanel>
                        <TextBlock Text="ℹ️ Instructions" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Foreground="#4caf50"
                                   Margin="0,0,0,10"/>
                        <TextBlock TextWrapping="Wrap" 
                                   FontSize="12"
                                   Foreground="#ccc"
                                   LineHeight="20">
                            <Run Text="1. Get your Student ID and ONE-TIME login code from your invigilator"/>
                            <LineBreak/>
                            <Run Text="2. Enter both credentials carefully"/>
                            <LineBreak/>
                            <Run Text="3. Click 'Start Exam' - the code will expire after first use"/>
                            <LineBreak/>
                            <LineBreak/>
                            <Run Text="⚠ Once exam starts, you CANNOT minimize, close, or switch applications"/>
                            <LineBreak/>
                            <Run Text="🔒 All security features will be activated automatically"/>
                            <LineBreak/>
                            <Run Text="🚨 If you face technical issues, contact your invigilator immediately"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
