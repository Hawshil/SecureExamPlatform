<Window x:Class="SecureExamPlatform.UI.LauncherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Secure Exam Platform - Launcher"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Border Background="#1a1a1a" 
            CornerRadius="15"
            BorderBrush="#444"
            BorderThickness="2">
        <Grid>
            <!-- Title Bar -->
            <Border Height="50"
                    VerticalAlignment="Top"
                    Background="#2c2c2c" 
                    CornerRadius="15,15,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Secure Exam Platform"
                               Foreground="White"
                               FontSize="16"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                    <Button Content="✕"
                            HorizontalAlignment="Right"
                            Width="50"
                            Height="50"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="18"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Main Content -->
            <StackPanel VerticalAlignment="Center" Margin="0,50,0,0">
                <!-- Logo -->
                <Border Width="120" 
                        Height="120" 
                        Background="#2e7d32"
                        CornerRadius="60"
                        Margin="0,0,0,30">
                    <TextBlock Text="🔒"
                               FontSize="64"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Title -->
                <TextBlock Text="Choose Mode"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Select your role to continue"
                           FontSize="14"
                           Foreground="#aaa"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>

                <!-- Buttons -->
                <StackPanel HorizontalAlignment="Center">
                    <!-- Student Button -->
                    <Button x:Name="StudentButton"
                            Click="StudentButton_Click"
                            Width="400"
                            Height="80"
                            Margin="0,0,0,20"
                            Background="#2e7d32"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="10"
                                        BorderBrush="#4caf50"
                                        BorderThickness="2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="🎓"
                                                   FontSize="40"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="Student Login"
                                                       FontSize="20"
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       Margin="0,0,0,5"/>
                                            <TextBlock Text="Take your exam with secure monitoring"
                                                       FontSize="12"
                                                       Foreground="#c8e6c9"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#388e3c"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Faculty Button -->
                    <Button x:Name="FacultyButton"
                            Click="FacultyButton_Click"
                            Width="400"
                            Height="80"
                            Background="#1565c0"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="10"
                                        BorderBrush="#2196f3"
                                        BorderThickness="2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="👨‍🏫"
                                                   FontSize="40"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="Faculty Dashboard"
                                                       FontSize="20"
                                                       FontWeight="Bold"
                                                       Foreground="White"
                                                       Margin="0,0,0,5"/>
                                            <TextBlock Text="Create exams and manage student credentials"
                                                       FontSize="12"
                                                       Foreground="#bbdefb"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1976d2"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

                <!-- Version Info -->
                <TextBlock Text="Version 1.0 | Secure Exam Platform"
                           FontSize="10"
                           Foreground="#666"
                           HorizontalAlignment="Center"
                           Margin="0,40,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>