<Window x:Class="SecureExamPlatform.UI.ExamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Secure Exam Platform" Height="768" Width="1024">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding ExamTitle}" FontSize="24" FontWeight="Bold" />
                    <TextBlock Text="{Binding StudentId, StringFormat='Student: {0}'}" FontSize="16" />
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                    <TextBlock Text="Time Remaining" FontSize="12" Foreground="Gray" />
                    <TextBlock Text="{Binding RemainingTimeDisplay}" FontSize="28" FontWeight="SemiBold" />
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <TextBlock Text="{Binding QuestionProgress}" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>

                <TextBlock Text="{Binding CurrentQuestionText}" TextWrapping="Wrap" FontSize="16" Margin="0,0,0,20"/>

                <Border BorderBrush="Gray" BorderThickness="1" MinHeight="200" Padding="10">
                    <TextBlock Text="[Answer controls will go here]" Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="0,1,0,0" Padding="10">
            <Grid>
                <Button Content="Previous" HorizontalAlignment="Left" Width="120" Height="40" Click="PreviousButton_Click"/>
                <Button Content="Next" HorizontalAlignment="Center" Width="120" Height="40" Click="NextButton_Click"/>
                <Button Content="Submit Exam" HorizontalAlignment="Right" Width="120" Height="40" Background="DarkGreen" Foreground="White" Click="SubmitButton_Click"/>
            </Grid>
        </Border>

    </Grid>
</Window>
