<Window x:Class="SecureExamPlatform.UI.CalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator"
        Height="450"
        Width="320"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Topmost="True"
        Background="#1a1a1a"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Display -->
        <Border Grid.Row="0" 
                Background="#2c2c2c" 
                BorderBrush="#555" 
                BorderThickness="2"
                CornerRadius="5"
                Padding="10">
            <TextBlock x:Name="DisplayText"
                       Text="0"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       TextTrimming="CharacterEllipsis"/>
        </Border>

        <!-- Buttons -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Row 0 -->
            <Button Grid.Row="0" Grid.Column="0" Content="C" Click="Clear_Click" Style="{StaticResource CalcButtonStyle}" Background="#f44336"/>
            <Button Grid.Row="0" Grid.Column="1" Content="⌫" Click="Backspace_Click" Style="{StaticResource CalcButtonStyle}" Background="#ff9800"/>
            <Button Grid.Row="0" Grid.Column="2" Content="%" Click="Operation_Click" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="0" Grid.Column="3" Content="÷" Click="Operation_Click" Style="{StaticResource CalcButtonStyle}"/>

            <!-- Row 1 -->
            <Button Grid.Row="1" Grid.Column="0" Content="7" Click="Number_Click" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="1" Grid.Column="1" Content="8" Click="Number_Click" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="1" Grid.Column="2" Content="9" Click="Number_Click" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="1" Grid.Column="3" Content="×" Click="Operation_Click" Style="{StaticResource CalcButtonStyle}"/>

            <!-- Row 2 -->
            <Button Grid.Row="2" Grid.Column="0" Content="4" Click="Number_Click" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="2" Grid.Column="1" Content="5" Click="Number_Click" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="2" Grid.Column="2" Content="6" Click="Number_Click" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="2" Grid.Column="3" Content="-" Click="Operation_Click" Style="{StaticResource CalcButtonStyle}"/>

            <!-- Row 3 -->
            <Button Grid.Row="3" Grid.Column="0" Content="1" Click="Number_Click" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="3" Grid.Column="1" Content="2" Click="Number_Click" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="3" Grid.Column="2" Content="3" Click="Number_Click" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="3" Grid.Column="3" Content="+" Click="Operation_Click" Style="{StaticResource CalcButtonStyle}"/>

            <!-- Row 4 -->
            <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Content="0" Click="Number_Click" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="4" Grid.Column="2" Content="." Click="Number_Click" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="4" Grid.Column="3" Content="=" Click="Equals_Click" Style="{StaticResource CalcButtonStyle}" Background="#4caf50"/>
        </Grid>
    </Grid>

    <Window.Resources>
        <Style x:Key="CalcButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2c2c2c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3d3d3d"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#555"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
</Window>
