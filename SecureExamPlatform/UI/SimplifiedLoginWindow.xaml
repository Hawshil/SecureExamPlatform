<Window x:Class="SecureExamPlatform.UI.SimplifiedLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Login"
        Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a1a">

    <StackPanel Margin="40" VerticalAlignment="Center">
        <TextBlock Text="🎓" FontSize="60" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Text="Student Exam Login" FontSize="24" FontWeight="Bold" 
                   Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,30"/>

        <!-- Student ID -->
        <TextBlock Text="Student ID" Foreground="#ccc" Margin="0,0,0,5"/>
        <TextBox x:Name="StudentIdBox" Height="40" FontSize="14" Margin="0,0,0,20"/>

        <!-- Login Code from Teacher -->
        <TextBlock Text="Login Code (from teacher)" Foreground="#ccc" Margin="0,0,0,5"/>
        <TextBox x:Name="LoginCodeBox" Height="40" FontSize="18" 
                 FontFamily="Consolas" MaxLength="8" Margin="0,0,0,30"/>

        <Button Content="Start Exam" Height="50" Background="#4caf50" 
                Foreground="White" FontSize="16" FontWeight="Bold" 
                Click="LoginButton_Click"/>

        <TextBlock x:Name="StatusText" Margin="0,15,0,0" 
                   Foreground="#f44336" TextWrapping="Wrap"/>
    </StackPanel>
</Window>