<Window x:Class="SecureExamPlatform.UI.ExitPasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exit Password Required"
        Height="300"
        Width="450"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="#1a1a1a"
        ResizeMode="NoResize"
        Topmost="True">

    <Border BorderBrush="#4caf50" BorderThickness="2" CornerRadius="8">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" 
                       Text="🔒 Exit Password Required" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Password Input -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="Enter the exit password to close the application:" 
                           Foreground="#ccc" 
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,0,0,15"/>

                <PasswordBox x:Name="PasswordBox" 
                             Height="45" 
                             FontSize="16"
                             Background="#2c2c2c"
                             Foreground="White"
                             BorderBrush="#555"
                             BorderThickness="2"
                             Padding="10"
                             HorizontalContentAlignment="Center"
                             Margin="0,0,0,10"/>

                <TextBlock x:Name="ErrorText"
                           Foreground="#f44336"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">
                <Button x:Name="OkButton"
                        Content="Confirm"
                        Width="120"
                        Height="40"
                        Background="#4caf50"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        Margin="0,0,10,0"
                        Click="OkButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#66bb6a"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button x:Name="CancelButton"
                        Content="Cancel"
                        Width="120"
                        Height="40"
                        Background="#757575"
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        Click="CancelButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#9e9e9e"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
