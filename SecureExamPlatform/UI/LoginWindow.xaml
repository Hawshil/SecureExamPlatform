<Window x:Class="SecureExamPlatform.UI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Secure Exam Platform - Login" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Border Background="White" CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.3"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#2196F3" CornerRadius="10,10,0,0" 
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                        <TextBlock Text="ðŸ”’" FontSize="20" Foreground="White" Margin="0,0,10,0"/>
                        <TextBlock Text="Secure Exam Platform" FontSize="18" FontWeight="SemiBold" 
                                   Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1" Name="CloseButton" Content="Ã—" 
                            Background="Transparent" Foreground="White" BorderThickness="0"
                            FontSize="20" FontWeight="Bold" Click="CloseButton_Click"
                            HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Side - Information -->
                <StackPanel Grid.Column="0" Margin="0,0,30,0">
                    <TextBlock Text="System Information" FontSize="18" FontWeight="SemiBold" 
                               Foreground="#333" Margin="0,0,0,20"/>
                    
                    <Border Background="#F5F5F5" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Computer Name:" FontWeight="SemiBold" FontSize="12" Foreground="#666"/>
                            <TextBlock Text="{Binding ComputerName}" FontSize="14" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="#F5F5F5" Padding="15" CornerRadius="5" Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="Hardware ID:" FontWeight="SemiBold" FontSize="12" Foreground="#666"/>
                            <TextBlock Text="{Binding HardwareId}" FontSize="14" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#FFF3CD" BorderBrush="#FFEAA7" BorderThickness="1" 
                            Padding="15" CornerRadius="5" Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="âš ï¸ Security Notice" FontWeight="SemiBold" FontSize="12" Foreground="#856404"/>
                            <TextBlock FontSize="11" Foreground="#856404" TextWrapping="Wrap" Margin="0,5,0,0">
                                This session is monitored for security. Screenshots, task switching, and unauthorized applications are blocked during the exam.
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Right Side - Login Form -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Student Login" FontSize="24" FontWeight="SemiBold" 
                               Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                    <!-- Student ID -->
                    <TextBlock Text="Student ID" FontWeight="SemiBold" FontSize="14" 
                               Foreground="#555" Margin="0,0,0,5"/>
                    <TextBox Name="StudentIdTextBox" 
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,0,20"
                             GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"
                             TextChanged="ValidateForm"/>

                    <!-- Session Token -->
                    <TextBlock Text="Session Token" FontWeight="SemiBold" FontSize="14" 
                               Foreground="#555" Margin="0,0,0,5"/>
                    <PasswordBox Name="SessionTokenBox" 
                                 Style="{StaticResource ModernPasswordBox}"
                                 Margin="0,0,0,30"
                                 GotFocus="PasswordBox_GotFocus"
                                 LostFocus="PasswordBox_LostFocus"
                                 PasswordChanged="SessionTokenBox_PasswordChanged"/>

                    <!-- Error Message -->
                    <TextBlock Name="ErrorMessage" 
                               Foreground="#D32F2F" 
                               FontSize="12" 
                               TextWrapping="Wrap" 
                               Margin="0,0,0,15"
                               Visibility="Collapsed"/>

                    <!-- Login Button -->
                    <Button Name="LoginButton" 
                            Content="Start Exam" 
                            Style="{StaticResource PrimaryButton}"
                            Height="45"
                            FontSize="16"
                            Click="LoginButton_Click"
                            IsEnabled="False"/>

                    <!-- Loading Indicator -->
                    <StackPanel Name="LoadingIndicator" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center" 
                                Margin="0,20,0,0"
                                Visibility="Collapsed">
                        <TextBlock Text="â³" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="Authenticating..." FontSize="14" Foreground="#666"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
