<Window x:Class="SecureExamPlatform.UI.FacultyDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Faculty Dashboard"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a1a">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2c2c2c" Padding="20" CornerRadius="8" Margin="0,0,0,20">
            <TextBlock Text="📊 Faculty Dashboard - Credential Management" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
            <!-- Tab 1: Generate Credentials -->
            <TabItem Header="Generate Credentials" FontSize="14">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Exam Selection -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="Select Exam:" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="ExamComboBox" Height="35" FontSize="14"/>
                        <Button Content="Import Exam" 
                                Height="35" 
                                Margin="0,10,0,0"
                                Click="CreateExamButton_Click"
                                Background="#2196F3"
                                Foreground="White"
                                BorderThickness="0"/>
                    </StackPanel>

                    <!-- Lab ID -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,20">
                        <TextBlock Text="Lab ID:" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="LabIdBox" Height="35" FontSize="14" Padding="5"/>
                    </StackPanel>

                    <!-- Student List -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,20">
                        <TextBlock Text="Student IDs (one per line):" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="StudentListBox" 
                                 Height="150" 
                                 FontSize="14" 
                                 Padding="5"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>

                    <!-- Credentials Grid -->
                    <Border Grid.Row="3" BorderBrush="#555" BorderThickness="1" CornerRadius="5">
                        <DataGrid x:Name="CredentialsGrid"
                                  AutoGenerateColumns="True"
                                  IsReadOnly="True"
                                  Background="#2c2c2c"
                                  Foreground="White"
                                  RowBackground="#2c2c2c"
                                  AlternatingRowBackground="#333"
                                  GridLinesVisibility="None"
                                  HeadersVisibility="Column">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#444"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Padding" Value="10"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                        </DataGrid>
                    </Border>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,20,0,0">
                        <Button Content="Generate Credentials" 
                                Width="180" 
                                Height="40" 
                                Margin="0,0,10,0"
                                Click="GenerateCredentialsButton_Click"
                                Background="#4caf50"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"/>
                        <Button Content="Export to CSV" 
                                Width="150" 
                                Height="40" 
                                Margin="0,0,10,0"
                                Click="ExportCredentialsButton_Click"
                                Background="#ff9800"
                                Foreground="White"
                                BorderThickness="0"/>
                        <Button Content="Print" 
                                Width="100" 
                                Height="40"
                                Click="PrintCredentialsButton_Click"
                                Background="#9c27b0"
                                Foreground="White"
                                BorderThickness="0"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Tab 2: View Submissions -->
            <TabItem Header="View Submissions" FontSize="14">
                <Grid Margin="20">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="📄 Exam Submissions" 
                                   FontSize="24" 
                                   Foreground="White" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"/>
                        <Button Content="View All Submissions" 
                                Width="200" 
                                Height="50"
                                Click="ViewSubmissionsButton_Click"
                                Background="#2196F3"
                                Foreground="White"
                                FontSize="16"
                                BorderThickness="0"/>
                        <Button Content="Refresh" 
                                Width="200" 
                                Height="50"
                                Margin="0,10,0,0"
                                Click="RefreshButton_Click"
                                Background="#757575"
                                Foreground="White"
                                FontSize="16"
                                BorderThickness="0"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#2c2c2c" Padding="15" CornerRadius="5" Margin="0,20,0,0">
            <TextBlock x:Name="StatusText" 
                       Text="Ready" 
                       Foreground="#4caf50" 
                       FontSize="12"/>
        </Border>
    </Grid>
</Window>
