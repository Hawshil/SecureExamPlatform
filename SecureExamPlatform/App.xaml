<Application x:Class="SecureExamPlatform.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="UI/LoginWindow.xaml"
             ShutdownMode="OnMainWindowClose">

    <Application.Resources>
        <!-- Global Styles -->
        <Style TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Color Resources -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#4caf50"/>
        <SolidColorBrush x:Key="DangerColor" Color="#f44336"/>
        <SolidColorBrush x:Key="WarningColor" Color="#ffc107"/>
        <SolidColorBrush x:Key="BackgroundDark" Color="#1a1a1a"/>
        <SolidColorBrush x:Key="BackgroundMedium" Color="#2c2c2c"/>
        <SolidColorBrush x:Key="TextPrimary" Color="White"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#aaa"/>
    </Application.Resources>
</Application>