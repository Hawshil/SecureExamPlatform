<Window x:Class="SecureExam.Admin.FacultyDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Faculty Dashboard - Secure Exam Platform"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a1a">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2c2c2c" Padding="25" Margin="20,20,20,10">
            <TextBlock Text="📊 Faculty Dashboard - Credential Management" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="20,0,20,10">
            <!-- Generate Credentials Tab -->
            <TabItem Header="Generate Credentials" FontSize="15" FontWeight="SemiBold">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalAlignment="Center">
                    <StackPanel Width="700" Margin="30">

                        <!-- Exam Selection -->
                        <Border Background="#2c2c2c" Padding="20" CornerRadius="8" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Select Exam:" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>
                                <ComboBox x:Name="ExamComboBox" Height="40" FontSize="14" Padding="10"/>
                                <Button Content="📁 Import Exam JSON" 
                                        Height="40" 
                                        Margin="0,15,0,0"
                                        Click="CreateExamButton_Click"
                                        Background="#2196F3"
                                        Foreground="White"
                                        BorderThickness="0"
                                        FontSize="14"
                                        FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>

                        <!-- Lab ID -->
                        <Border Background="#2c2c2c" Padding="20" CornerRadius="8" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Lab ID:" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>
                                <TextBox x:Name="LabIdBox" 
                                         Height="40" 
                                         FontSize="14" 
                                         Padding="10" 
                                         CharacterCasing="Upper"/>
                            </StackPanel>
                        </Border>

                        <!-- Student List -->
                        <Border Background="#2c2c2c" Padding="20" CornerRadius="8" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Student IDs (one per line):" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>
                                <TextBox x:Name="StudentListBox" 
                                         Height="150" 
                                         FontSize="13" 
                                         Padding="10"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"
                                         CharacterCasing="Upper"/>
                            </StackPanel>
                        </Border>

                        <!-- Credentials Grid -->
                        <Border BorderBrush="#555" BorderThickness="1" CornerRadius="8" Margin="0,0,0,15" MinHeight="250">
                            <DataGrid x:Name="CredentialsGrid"
                                      AutoGenerateColumns="True"
                                      IsReadOnly="True"
                                      Background="#2c2c2c"
                                      Foreground="White"
                                      RowBackground="#2c2c2c"
                                      AlternatingRowBackground="#333"
                                      GridLinesVisibility="None"
                                      HeadersVisibility="Column">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="#444"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Padding" Value="10"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                            </DataGrid>
                        </Border>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Button Content="✨ Generate Credentials" 
                                    Width="200" 
                                    Height="45" 
                                    Margin="5"
                                    Click="GenerateCredentialsButton_Click"
                                    Background="#4caf50"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    FontSize="14"
                                    BorderThickness="0"/>
                            <Button Content="📤 Export to CSV" 
                                    Width="160" 
                                    Height="45" 
                                    Margin="5"
                                    Click="ExportCredentialsButton_Click"
                                    Background="#ff9800"
                                    Foreground="White"
                                    FontSize="14"
                                    BorderThickness="0"/>
                            <Button Content="🖨️ Print" 
                                    Width="120" 
                                    Height="45"
                                    Margin="5"
                                    Click="PrintCredentialsButton_Click"
                                    Background="#9c27b0"
                                    Foreground="White"
                                    FontSize="14"
                                    BorderThickness="0"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Submissions Tab -->
            <TabItem Header="View Submissions" FontSize="15" FontWeight="SemiBold">
                <Grid Margin="20">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="📄 Exam Submissions" 
                                   FontSize="24" 
                                   Foreground="White" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,30"
                                   HorizontalAlignment="Center"/>
                        <Button Content="View All Submissions" 
                                Width="250" 
                                Height="60"
                                Click="ViewSubmissionsButton_Click"
                                Background="#2196F3"
                                Foreground="White"
                                FontSize="16"
                                FontWeight="SemiBold"
                                BorderThickness="0"/>
                        <Button Content="🔄 Refresh" 
                                Width="250" 
                                Height="55"
                                Margin="0,15,0,0"
                                Click="RefreshButton_Click"
                                Background="#757575"
                                Foreground="White"
                                FontSize="15"
                                BorderThickness="0"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Grading Tab -->
            <TabItem Header="Grade Submissions" FontSize="15" FontWeight="SemiBold">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalAlignment="Center">
                    <StackPanel Width="700" Margin="30">
                        <TextBlock Text="Grading Tool" 
                                   FontSize="22" 
                                   Foreground="White" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"/>

                        <Border Background="#2c2c2c" Padding="20" CornerRadius="8" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Select Submission:" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,8"/>
                                <ComboBox x:Name="SubmissionsComboBox" 
                                          Height="40" 
                                          FontSize="14" 
                                          Padding="10"/>
                                <Button Content="🔄 Refresh Submissions" 
                                        Height="40" 
                                        Margin="0,15,0,0"
                                        Click="RefreshSubmissionsButton_Click"
                                        Background="#757575"
                                        Foreground="White"
                                        BorderThickness="0"
                                        FontSize="14"/>
                            </StackPanel>
                        </Border>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Button Content="✅ Grade Submission" 
                                    Width="200" 
                                    Height="50" 
                                    Margin="5"
                                    Click="GradeSubmissionButton_Click"
                                    Background="#4caf50"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    FontSize="14"
                                    BorderThickness="0"/>
                            <Button Content="📊 View All Grades" 
                                    Width="200" 
                                    Height="50" 
                                    Margin="5"
                                    Click="ViewAllGradesButton_Click"
                                    Background="#2196F3"
                                    Foreground="White"
                                    FontSize="14"
                                    BorderThickness="0"/>
                        </StackPanel>

                        <!-- Grading Results Display -->
                        <Border x:Name="GradingResultsPanel" 
                                Background="#2c2c2c" 
                                Padding="20" 
                                CornerRadius="8" 
                                Margin="0,20,0,0"
                                Visibility="Collapsed">
                            <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
                                <TextBlock x:Name="GradingResultsText" 
                                           Foreground="White" 
                                           FontSize="12" 
                                           FontFamily="Consolas"
                                           TextWrapping="Wrap"/>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#2c2c2c" Padding="15" Margin="20,10,20,20">
            <TextBlock x:Name="StatusText" 
                       Text="Ready" 
                       Foreground="#4caf50" 
                       FontSize="13"/>
        </Border>
    </Grid>
</Window>
